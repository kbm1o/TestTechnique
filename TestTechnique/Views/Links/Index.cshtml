@model IEnumerable<TestTechnique.Models.Link>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShortLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OriginalLink)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@item.ShortLink" target="_blank">
                        @Html.DisplayFor(modelItem => item.ShortLink)
                    </a>
                </td>
                <td>
                    <a href="@item.OriginalLink" target="_blank">
                        @Html.DisplayFor(modelItem => item.OriginalLink)
                    </a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
